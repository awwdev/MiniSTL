# PREFAB LANGUAGE
#   # comment
#   @ prefab 
#   ? component
#   = component data 
#   , component data multiple values
# ONE-LINERS are permitted only
# whitespace is fine

@ Sword
    ? TransformComponent
        + Children = Sword_Grib, Sword_Blade

@ Sword_Grib
    ? TransformComponent
    ? RenderComponent
        + Mesh = sword_grib
        + Material = wood
    
@ Sword_Blade
    ? TransformComponent
    ? RenderComponent
        + Mesh = sword_blade
        + Material = metallic
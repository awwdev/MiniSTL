{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build_debug",
            "command": "${workspaceFolder}/build/build_debug.bat",
            "args": [
                "${workspaceFolder}/build/debug",                    //build dir
                "${workspaceFolder}/src",                            //include headers
                "${workspaceFolder}/build/debug/rpg_debug.exe",      //build name
                "${workspaceFolder}/src/main.cpp",                   //cpp
                "${workspaceFolder}/third/libs",                     //libs
            ]
        },
        {
            "type": "shell",
            "label": "build_optimized",
            "command": "${workspaceFolder}/build/build_optimized.bat",
            "args": [
                "${workspaceFolder}/build/optimized",                //build dir
                "${workspaceFolder}/src",                            //include headers
                "${workspaceFolder}/build/optimized/rpg_optimized.exe", //build name
                "${workspaceFolder}/src/main.cpp",                   //cpp
                "${workspaceFolder}/third/libs",                     //libs
            ]
        },
    ]
}
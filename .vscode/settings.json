{
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "explorer.confirmDelete": false,
    "window.zoomLevel": 0,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "debug.onTaskErrors": "showErrors",

    "workbench.colorCustomizations": {
        "editor.background": "#313335",
        "panel.background": "#313235",
        "editorLineNumber.foreground": "#444",
        "editorLineNumber.activeForeground": "#0F0",
        "editor.lineHighlightBorder": "#313235",
        "sideBar.background": "#000",
        "symbolIcon.enumeratorForeground": "#ff0000"
    },

    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "gutter",

    "editor.tokenColorCustomizations": {
        "textMateRules": [

            {
                "scope":[
                    "constant.numeric",
                    "string",
                    "variable.other.enummember",
                    "entity.name.function.preprocessor",
                ],
                "settings": {
                    "foreground": "#d887cd",
                }
            },
            {
                "scope":[
                    "punctuation.definition.string.begin",
                    "punctuation.definition.string.end",
                ],
                "settings": {
                    "foreground": "#b386ad",
                }
            },


            //?DEFAULT TEXT
            {
                "scope":[
                    "variable.other.enummember",
                    "entity.name"
                ],
                "settings": {
                    "foreground": "#f0ebe4",
                    "fontStyle": "bold"
                }
            },
            {
                "scope":[
                    "variable.parameter",
                ],
                "settings": {
                    "foreground": "#f0ebe4",
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope":[
                    "keyword",
                    "entity.name.namespace",
                    ],
                "settings": {
                    "foreground": "#d1ab9a",
                }
            },
            {
                "scope":[
                    "punctuation",
                    "punctuation.terminator"
                    ],
                "settings": {
                    "foreground": "#9b8f89",
                }
            },
            {
                "scope":[
                    "keyword.operator.assignment",
                    "keyword.operator.logical"
                    ],
                "settings": {
                    "foreground": "#d85959",
                }
            },

            {
                "scope":[
                    "storage",
                    "storage.modifier",
                    "storage.type",
                    
                ],
                "settings": {
                    "foreground": "#d1ab9a",
                    "fontStyle": "italic"
                }
            },
            


            {
                "scope":[
                    "entity.name.type",
                    "punctuation.definition.template-expression.begin",
                    "punctuation.definition.template-expression.end",
                    "entity.other.attribute-name"
                    
                ],
                "settings": {
                    "foreground": "#f7d98d",
                    "fontStyle": "bold"
                }
            },
            {
                "scope":[
                    "entity.name.function",
                    "entity.name.method",
                ],
                "settings": {
                    "foreground": "#89b2ff",
                    "fontStyle": "bold"
                }
            },

            //COMMENT
            {
                "scope":[
                    "comment.line",
                    "comment.block.documentation",
                    "comment.block",
                    "comment"
                ],
                "settings": {
                    "foreground": "#7fad59",
                }
            },

        ]
    },







    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "backgroundColor": "transparent",
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
    ],
    "git.decorations.enabled": false,
    "scm.diffDecorationsGutterVisibility": "hover",
    "scm.diffDecorationsGutterWidth": 5,
    "editor.minimap.maxColumn": 50,
    "editor.minimap.enabled": false,
    "scm.diffDecorations": "gutter",
    "files.associations": {

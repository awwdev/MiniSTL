{
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "explorer.confirmDelete": false,
    "rust-client.updateOnStartup": true,
    "rust.all_features": true,
    "window.zoomLevel": 0,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "debug.onTaskErrors": "showErrors",
    "workbench.colorTheme": "Gatito Theme",
    

    "workbench.colorCustomizations": {
         "[Gatito Theme]": {
            "editor.background": "#2a2a2e",
            "sideBar.background": "#111",
            "editorGutter.background": "#2a2a2e",
            "terminal.background": "#2a2a2e",
            "panel.background": "#222",
            "editorLineNumber.foreground": "#333"
        },
    },

    "editor.renderIndentGuides": false,
    
    "editor.tokenColorCustomizations" : {
        
        "textMateRules": [

            //CONTROL
            {
                "scope": [
                    "keyword.operator.assignment", 
                    "keyword.operator.logical", 
                    "keyword.control",
                    "keyword.operator",
                    //"punctuation.terminator",
                ],
                "settings": {
                    "foreground": "#eb6565",
                }
            },

            //FUNCTION AND TYPE
            {
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#ffaf64",
                }
            },
            {
                "scope": "entity.name.type",
                "settings": {
                    "foreground": "#f0de8e"
                }
            },

            //STRING / NUMBER
            {
                "scope": [ 
                    "string", 
                    "constant.numeric",
                    "punctuation.definition.string.begin",
                    "punctuation.definition.string.end",
                ],
                "settings": {
                    "foreground": "#77a7ee",
                }
            },

            //NAMESPACE            
            {
                "scope": "entity.name.namespace",
                "settings": {
                    "foreground": "#e1e1e1",
                    //"fontStyle": "bold underline"
                }
            },
            

            //STRUCT CLASS USING CONST MACRO
            {
                "scope": [ 
                    "storage.type", 
                    "storage.modifier", 
                    "entity.name.function.preprocessor", 
                    "keyword.other" 
                ],
                "settings": {
                     "foreground": "#e09fd0",
                }
            },
            {
                "scope": [ 
                    "storage.modifier", 
                    "entity.name.function.preprocessor" 
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },


            //DEFAULT TEXT
            {
                "scope": "meta",
                "settings": {
                    "foreground": "#e1e1e1",
                }
            },
            {
                "scope": ["punctuation", "comment"],
                "settings": {
                    "foreground": "#888",
                }
            },
            
            {
                "scope": [ "comment.block.documentation" ],
                "settings": {
                    "foreground": "#000",
                }
            },

            {
                "scope": [ "variable.parameter" ],
                "settings": {
                    "foreground": "#e1e1e1",
                    "fontStyle": "bold"
                }
            },
            




            
        ]
    },

    "githubIssues.queries": [
        {
            "label": "Created Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} sort:updated-desc"
        }
    ],
    "githubIssues.createIssueTriggers": [
        "TODO",
    ],
    "githubIssues.useBranchForIssues": "off",


    "better-comments.tags": [

        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "backgroundColor": "transparent",
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
    ],

    "git.decorations.enabled": false,
    "scm.diffDecorationsGutterVisibility": "hover",
    "scm.diffDecorationsGutterWidth": 5,
    "editor.minimap.maxColumn": 50,
    "editor.minimap.enabled": false,
    "scm.diffDecorations": "gutter",
